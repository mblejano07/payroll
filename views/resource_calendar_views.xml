<odoo>
    <record id="view_resource_calendar_form_inherit_core_hours" model="ir.ui.view">
        <field name="name">resource.calendar.form.inherit.core.hours</field>
        <field name="model">resource.calendar</field>
        <field name="inherit_id" ref="resource.resource_calendar_form"/>
        <field name="arch" type="xml">
             <xpath expr="//group[@name='resource_working_hours']/field[@name='hours_per_day']" position="after">
                <!-- Add your fields after hours_per_day -->
                <field name="core_hours_start"  widget="selection" />
                <field name="core_hours_end"  widget="selection" />
            </xpath>
        </field>
    </record>
</odoo>
